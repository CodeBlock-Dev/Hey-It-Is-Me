<div class="wizard-step">
    <div class="text-center mb-4">
        <i class="bi bi-question-circle text-primary" style="font-size: 2.5rem;"></i>
        <h3 class="mt-3 mb-3">Answer Questions</h3>
        <p class="text-muted">Help us create amazing facts about you</p>
    </div>
    
    @if (Questions != null && Questions.Any())
    {
        <div class="question-progress mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <span class="text-muted">Question @(CurrentQuestionIndex + 1) of @Questions.Count()</span>
                <span class="text-muted">@(Math.Round((double)(CurrentQuestionIndex + 1) / Questions.Count() * 100))% Complete</span>
            </div>
            <div class="progress mt-2">
                <div class="progress-bar" role="progressbar" style="width: @(Math.Round((double)(CurrentQuestionIndex + 1) / Questions.Count() * 100))%"></div>
            </div>
        </div>
        
        @if (CurrentQuestion != null)
        {
            <div class="question-card mb-4">
                <h5 class="question-title">@CurrentQuestion.Content</h5>
                @if (!string.IsNullOrEmpty(CurrentQuestion.Description))
                {
                    <p class="question-description text-muted">@CurrentQuestion.Description</p>
                }
                
                <div class="form-group">
                    <textarea class="form-control" rows="4" @bind="CurrentAnswer" @bind:event="oninput"
                              placeholder="Share your thoughts..."></textarea>
                </div>
            </div>
        }
        
        <div class="d-flex justify-content-between">
            <button class="btn btn-outline-secondary" @onclick="HandleSkipQuestion" disabled="@IsLoading">
                <i class="bi bi-skip-forward me-2"></i>Skip
            </button>
            <div>
                @if (CurrentQuestionIndex < Questions.Count() - 1)
                {
                    <button class="btn btn-primary" @onclick="HandleNextQuestion" disabled="@IsLoading">
                        @if (IsLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Generating fact...</span>
                        }
                        else
                        {
                            <i class="bi bi-arrow-right me-2"></i>
                            <span>Next Question</span>
                        }
                    </button>
                }
                else
                {
                    <button class="btn btn-success" @onclick="HandleComplete" disabled="@IsLoading">
                        @if (IsLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Generating fact...</span>
                        }
                        else
                        {
                            <i class="bi bi-check-lg me-2"></i>
                            <span>Complete</span>
                        }
                    </button>
                }
            </div>
        </div>
    }
    else if (IsLoadingQuestions)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading questions...</span>
            </div>
            <p class="mt-3 text-muted">Loading questions...</p>
        </div>
    }
</div>


@code {
    [Parameter] public string PageId { get; set; }
    [Parameter] public EventCallback OnComplete { get; set; }
    
    private IEnumerable<GetQuestionDto> Questions;
    private int CurrentQuestionIndex = 0;
    private string CurrentAnswer = "";
    private bool IsLoading = false;
    private bool IsLoadingQuestions = false;
    
    private GetQuestionDto CurrentQuestion => Questions?.ElementAtOrDefault(CurrentQuestionIndex);
    
    protected override async Task OnInitializedAsync()
    {
        await LoadQuestions();
    }
    
    private async Task LoadQuestions(bool resetIndex = true)
    {
        IsLoadingQuestions = true;
        var result = await QuestionService.GetOrderedQuestions();
        if (result.IsSuccess)
        {
            Questions = result.Value;
            if (resetIndex)
            {
                CurrentQuestionIndex = 0;
                CurrentAnswer = "";
            }
        }
        else
        {
            result.ShowErrorToast(ToastService);
        }
        IsLoadingQuestions = false;
    }
    
    private bool IsLastQuestion => CurrentQuestionIndex == Questions.Count() - 1;
    
    private async Task HandleSkipQuestion()
    {
        if (CurrentQuestion == null || IsLoading)
            return;
        
        // If we're on the last question, skip should complete the wizard
        if (IsLastQuestion)
        {
            await CompleteWizard();
            return;
        }
        
        // Skip to next question without generating a fact
        CurrentQuestionIndex++;
        CurrentAnswer = "";
        
        // If we've skipped past all current questions, check if there are more
        if (CurrentQuestionIndex >= Questions.Count())
        {
            await CheckAndCompleteIfDone();
        }
    }
    
    private async Task HandleNextQuestion()
    {
        if (CurrentQuestion == null || string.IsNullOrWhiteSpace(CurrentAnswer) || IsLoading)
            return;
            
        // Generate fact and only proceed if successful
        var success = await GenerateFactForCurrentQuestion();
        if (!success)
        {
            // Don't proceed if fact generation failed
            return;
        }
        
        // Move to next question after successful fact generation
        CurrentQuestionIndex++;
        CurrentAnswer = "";
        
        // If we've answered all current questions, check if there are more
        if (CurrentQuestionIndex >= Questions.Count())
        {
            await CheckAndCompleteIfDone();
        }
    }
    
    private async Task HandleComplete()
    {
        if (CurrentQuestion == null || string.IsNullOrWhiteSpace(CurrentAnswer) || IsLoading)
            return;
            
        // Generate fact and only proceed if successful
        var success = await GenerateFactForCurrentQuestion();
        if (!success)
        {
            // Don't proceed if fact generation failed
            return;
        }
        
        // We're on the last question and fact was generated successfully, complete the wizard
        await CompleteWizard();
    }
    
    private async Task CompleteWizard()
    {
        // Update page state to Completed
        var updateStateResult = await PageService.UpdatePageState(PageId, Core.Domain.Pages.PageState.Completed);
        if (!updateStateResult.IsSuccess)
        {
            updateStateResult.ShowErrorToast(ToastService);
            // Don't complete if state update failed
            return;
        }
        
        // Successfully completed, move to completion step
        await OnComplete.InvokeAsync();
    }
    
    private async Task CheckAndCompleteIfDone()
    {
        // Small delay to ensure fact is persisted before reloading questions
        await Task.Delay(500);
        
        // Reload questions to see if there are any more unanswered questions
        // Don't reset index when checking for completion
        await LoadQuestions(resetIndex: false);
        
        // If no more questions, we're done
        if (Questions == null || !Questions.Any())
        {
            await CompleteWizard();
        }
        else
        {
            // There are more questions available, reset to first question
            CurrentQuestionIndex = 0;
            CurrentAnswer = "";
        }
    }
    
    private async Task<bool> GenerateFactForCurrentQuestion()
    {
        if (CurrentQuestion == null || string.IsNullOrWhiteSpace(CurrentAnswer) || string.IsNullOrWhiteSpace(PageId))
            return false;
            
        IsLoading = true;
        try
        {
            var result = await FactService.GenerateFact(PageId, CurrentQuestion.Id, CurrentAnswer);
            if (!result.IsSuccess)
            {
                result.ShowErrorToast(ToastService);
                return false;
            }
            return true;
        }
        finally
        {
            IsLoading = false;
        }
    }
}
